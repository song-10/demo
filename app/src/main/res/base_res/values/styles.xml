<resources>

    <style name="Theme_Transparent" parent="android:Theme.Dialog">
        <item name="android:padding">10dp</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Left_Label_text_style">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_des_hint</item>
    </style>

    <style name="EditLine_Left_Label_text_style" parent="Left_Label_text_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/detail_text_color</item>
    </style>

    <style name="Right_Label_text_style">
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|left</item>
    </style>

</resources>
